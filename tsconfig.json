{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next",
      },
    ],
    "incremental": true,
    "noEmit": true,
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".ladle/**/*.tsx",
    ".next/types/**/*.ts",
    "vite.config.mts",
  ],
  "exclude": ["node_modules", "src/**/*.ts", "src/**/*.tsx"],
}
